/**app.wxss**/
page {
  height: 100vh;
  width: 100vw;
  position: relative;
  overflow-x: hidden;
}

.bg-image {
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  z-index: -1;
  opacity: 0.3;
}

.watermark {
  position: fixed;
  top: 20rpx;
  right: 20rpx;
  width: 100rpx;
  height: 100rpx;
  opacity: 0.6;
  z-index: 100;
}

.container {
  min-height: 100vh;
  width: 100vw;
  box-sizing: border-box;
}
