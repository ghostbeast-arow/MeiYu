.page-container {
  min-height: 100vh;
  width: 100vw;
  position: relative;
  background-color: transparent;
  box-sizing: border-box;
  overflow-x: hidden;
}

.bg-image {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
}

.content-wrap {
  padding: 30rpx;
}

.input-section {
  background: rgba(255, 255, 255, 0.8);
  padding: 30rpx;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
  backdrop-filter: blur(10px);
  margin-bottom: 30rpx;
}

.title-input {
  font-size: 32rpx;
  padding: 20rpx;
  background: rgba(255, 255, 255, 0.5);
  border-radius: 8rpx;
  margin-bottom: 20rpx;
}

.content-input {
  width: 100%;
  height: 200rpx;
  font-size: 28rpx;
  padding: 20rpx;
  background: rgba(255, 255, 255, 0.5);
  border-radius: 8rpx;
  box-sizing: border-box;
}

.action-buttons {
  display: flex;
  justify-content: space-around;
  padding: 20rpx 0;
  background: rgba(255, 255, 255, 0.8);
  border-radius: 16rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
  backdrop-filter: blur(10px);
  margin-bottom: 30rpx;
}

.generate-button {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx;
}

.generate-button image {
  width: 48rpx;
  height: 48rpx;
  margin-bottom: 10rpx;
}

.generate-button text {
  font-size: 24rpx;
  color: #333;
}

.result-area {
  background: rgba(255, 255, 255, 0.8);
  padding: 30rpx;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
  backdrop-filter: blur(10px);
}

.result-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  text-align: center;
  margin-bottom: 30rpx;
}

.generated-image {
  width: 100%;
  border-radius: 8rpx;
}

.audio-player {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx;
}

.audio-btn {
  width: 200rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  background: #4CAF50;
  color: white;
  border-radius: 8rpx;
  font-size: 28rpx;
}

video {
  width: 100%;
  border-radius: 8rpx;
}

.download-btn {
  margin-top: 30rpx;
  width: 100% !important;
  background: #4CAF50;
  color: white;
  font-size: 28rpx;
} 