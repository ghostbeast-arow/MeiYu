/**index.wxss**/
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
}
.scrollarea {
  flex: 1;
  overflow-y: hidden;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #aaa;
  width: 80%;
}

.userinfo-avatar {
  overflow: hidden;
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.usermotto {
  margin-top: 200px;
}

.avatar-wrapper {
  padding: 0;
  width: 56px !important;
  border-radius: 8px;
  margin-top: 40px;
  margin-bottom: 40px;
}

.avatar {
  display: block;
  width: 56px;
  height: 56px;
}

.nickname-wrapper {
  display: flex;
  width: 100%;
  padding: 16px;
  box-sizing: border-box;
  border-top: .5px solid rgba(0, 0, 0, 0.1);
  border-bottom: .5px solid rgba(0, 0, 0, 0.1);
  color: black;
}

.nickname-label {
  width: 105px;
}

.nickname-input {
  flex: 1;
}

.container {
  position: relative;
  min-height: 100vh;
  padding: 20rpx;
}

.bg-image {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
  opacity: 0.1;
}

.function-area {
  padding: 20rpx;
}

.intro-button {
  width: 100%;
  height: 88rpx;
  background: #4CAF50;
  color: white;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  margin-bottom: 20rpx;
  border-radius: 12rpx;
  box-shadow: 0 4rpx 12rpx rgba(76, 175, 80, 0.2);
}

.button-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 16rpx;
}

.poetry-list {
  margin-top: 20rpx;
  padding: 20rpx;
  border: 2rpx solid rgba(76, 175, 80, 0.3);
  border-radius: 16rpx;
  background: rgba(76, 175, 80, 0.05);
  height: 800rpx;
  display: flex;
  flex-direction: column;
}

.poetry-list-header {
  display: flex;
  align-items: center;
  justify-content: center;
  padding-bottom: 16rpx;
  border-bottom: 2rpx solid rgba(76, 175, 80, 0.2);
  position: relative;
}

.update-time {
  position: absolute;
  right: 0;
  font-size: 24rpx;
  color: #999;
}

.poetry-scroll {
  flex: 1;
  overflow: hidden;
}

.poetry-item {
  background: rgba(255, 255, 255, 0.9);
  padding: 20rpx;
  margin: 20rpx 0;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
  display: flex;
  align-items: flex-start;
}

.rank-badge {
  width: 40rpx;
  height: 40rpx;
  background: #999;
  color: white;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.rank-badge.top-1 {
  background: #FF6B6B;
}

.rank-badge.top-2 {
  background: #4ECDC4;
}

.rank-badge.top-3 {
  background: #45B7D1;
}

.poetry-content-wrap {
  flex: 1;
}

.poetry-stats {
  margin-top: 16rpx;
  display: flex;
  align-items: center;
}

.stat-item {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #999;
}

.stat-icon {
  width: 28rpx;
  height: 28rpx;
  margin-right: 8rpx;
}

.poetry-list-title {
  font-size: 32rpx;
  color: #4CAF50;
  font-weight: bold;
}

.hot-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 10rpx;
}

.poetry-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
  display: block;
}

.poetry-author {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 10rpx;
  display: block;
}

.poetry-content {
  font-size: 28rpx;
  color: #444;
  display: block;
}

/* 添加登录相关样式 */
.login-container {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: #fff;
}

.login-bg {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 300rpx;
  height: 300rpx;
  opacity: 0;
  animation: fadeIn 1s ease forwards;
}

@keyframes fadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

.login-content {
  position: relative;
  z-index: 2;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx;
}

.app-logo {
  width: 160rpx;
  height: 160rpx;
  margin-bottom: 30rpx;
}

.app-title {
  font-size: 40rpx;
  font-weight: bold;
  color: #4CAF50;
  margin-bottom: 20rpx;
}

.app-desc {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 60rpx;
}

.login-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 600rpx;
  height: 88rpx;
  background: #4CAF50;
  color: #fff;
  border-radius: 44rpx;
  font-size: 32rpx;
  border: none;
}

.wechat-icon {
  width: 48rpx;
  height: 48rpx;
  margin-right: 16rpx;
}

/* 添加新样式 */
.intro-modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 1000;
  opacity: 0;
  visibility: hidden;
  transition: opacity 0.3s;
}

.intro-modal.show {
  opacity: 1;
  visibility: visible;
}

.modal-mask {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.6);
}

.modal-content {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 80%;
  background: white;
  border-radius: 20rpx;
  padding: 40rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.15);
}

.intro-swiper {
  height: 600rpx;
}

.intro-page {
  padding: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.intro-text {
  font-size: 30rpx;
  color: #333;
  line-height: 1.8;
  text-align: center;
}

.swiper-dots {
  display: flex;
  justify-content: center;
  margin-top: 30rpx;
}

.dot {
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  background: #ddd;
  margin: 0 8rpx;
  transition: all 0.3s;
}

.dot.active {
  background: #4CAF50;
  width: 32rpx;
  border-radius: 8rpx;
}

.swipe-hint {
  text-align: center;
  color: #999;
  font-size: 24rpx;
  margin-top: 20rpx;
}

.close-btn {
  margin-top: 30rpx;
  text-align: center;
  padding: 20rpx;
  color: #4CAF50;
  font-size: 28rpx;
}
